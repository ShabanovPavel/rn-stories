{
    "root": true,
    "parser":"babel-eslint",

    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb","prettier", "prettier/react","@react-native-community"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "react/jsx-filename-extension": 0,
        "prettier/prettier": [
        "error",
        {
            "trailingComma": "all",
            "singleQuote": true,
            "printWidth": 100,
            "semi": true,
            "useTabs": true,
            "jsxSingleQuote": false,
            "bracketSpacing": false
        }
        ],
        "import/no-cycle": [2, { "maxDepth": 1 }],
        "react/jsx-uses-vars": [2],
        "linebreak-style": 0,
        "quotes": [1, "single"]
    }
}